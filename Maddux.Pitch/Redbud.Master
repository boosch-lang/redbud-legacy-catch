                        <li class="divider-vertical"></li>
                        <li class="dropdown" id="mnuAccount" runat="server">
                            <a class="dropdown-toggle" id="mnuAccountDropdown" data-toggle="dropdown" style="cursor: pointer;">
                                <i class="fas fa-user-circle fa-lg visible-lg-span" style="padding-right: 10px;"></i>My Profile
                                    <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li id="mnuResources" runat="server">
                                    <a href="resources.aspx">Staff Resources</a>
                                </li>
                                <li class="divider"></li>
                                <li><a href="account.aspx" title="Edit your account settings">Profile</a></li>
                                <li class="divider"></li>
                                <li><a href="changepassword.aspx" title="Change your password">Change Password</a></li>
