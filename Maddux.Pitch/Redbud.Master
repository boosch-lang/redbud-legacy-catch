                    </div>
                    
                </div>
            </div>
        </div>

        <!-- Page Content -->
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <asp:Literal Text="" ID="litMessage" runat="server" />
                    <asp:ContentPlaceHolder ID="cphBody" runat="server">
                    </asp:ContentPlaceHolder>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer no-print" style="padding-top: 5px;">
            <div class="container-fluid">
